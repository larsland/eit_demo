<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8"></meta>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap-material-design.min.css' />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>

    <script src="/javascripts/app.js"></script>
  </head>

  <body ng-app="gameMaster" ng-controller="MainCtrl">
      <div class="container">
          <div class="row">
              <div class="col-md-12">
                  <p style="margin-top: 20px" class="subtitle center-text">År overlevd</p>
                  <div class="progress" style="height: 30px">
                      <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="82" aria-valuemin="13" max="82" min="13" style="width:{{year}}%">{{year}}</div>
                  </div>
              </div>
          </div>
          <div class="row">
              <div class="col-md-5">
                  <div class="panel panel-info">
                      <div class="panel-heading">Forbruk</div>
                      <div class="panel-body">
                          <div class="center">
                              <table>
                                  <tr>
                                      <td class="table-cell">
                                          <div ng-click="drinkWater()" class="filler-box water"></div>
                                      </td>
                                      <td class="table-cell">
                                          <div ng-click="eatHealthyFood()" class="filler-box food-healthy"></div>
                                      </td>
                                      <td class="table-cell">
                                          <div ng-click="party()" class="filler-box wine"></div>
                                      </td>
                                      <td class="table-cell">
                                          <div ng-show="condomSwitch" id="condom-box" ng-click="useCondom()" class="filler-box condom condom-box"></div>
                                          <div ng-hide="condomSwitch" id="condom-box" ng-click="useCondom()" class="filler-box-clicked"></div>
                                      </td>

                                  </tr>
                              </table>
                          </div>
                      </div>
                  </div>

                  <div style="margin-top: 34px" class="panel panel-info">
                      <div class="panel-heading">Sykdommer</div>
                      <div class="panel-body">
                          <table>
                              <tr>
                                  <td class="table-cell">
                                      <div ng-click="useSmoke()" class="filler-box smoke"></div>
                                  </td>
                                  <td class="table-cell">
                                      <div ng-click="dropContamination()" class="filler-box drops"></div>
                                  </td>
                                  <td class="table-cell">
                                      <div ng-click="getStd()" class="filler-box std"></div>
                                  </td>
                                  <td class="table-cell">
                                      <div ng-click="rollDice()" class="filler-box dice"></div>
                                  </td>

                              </tr>
                          </table>
                      </div>
                  </div>


              </div>
              <div class="col-md-7">
                  <div class="panel panel-info">
                      <div class="panel-heading">Målere</div>
                      <div class="panel-body">
                          <p class="subtitle">Helse</p>
                          <div class="progress" style="height: 50px">
                              <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="82" aria-valuemin="0" style="width:{{health}}%">{{health}}%</div>
                          </div>
                          <p class="subtitle">Lykke</p>
                          <div class="progress" style="height: 50px">
                              <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="82" aria-valuemin="0" style="width:{{stress}}%">{{stress}}%</div>
                          </div>
                          Sult
                          <div class="progress">
                              <div class="progress-bar" role="progressbar" aria-valuenow="82" aria-valuemin="0" style="width:{{hunger}}%">{{year}}%</div>
                          </div>
                          Tørste
                          <div class="progress">
                              <div class="progress-bar" role="progressbar" aria-valuenow="82" aria-valuemin="0" style="width:{{thirst}}%">{{year}}%</div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="row">
              <div class="col-md-12">
                  <div class="console">
                      <div style="background-color: white">
                          <p class="console-header">Console</p>
                      </div>
                      <p class="message">{{message}}</p>
                  </div>
              </div>
          </div>
      </div>
          <script src="/javascripts/js.js"></script>
  </body
</html>
